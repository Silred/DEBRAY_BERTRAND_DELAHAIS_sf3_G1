{# src/AppBundle/Resources/views/Article/show.html.twig #}

{% extends "AppBundle::layout.html.twig" %}

{% block title %}
    {{ article.title }}
{% endblock %}

{% block blog_body %}

    <div class="row">

        <div class="col-md-12">

        <h2>{{ article.title }}</h2>

        <h4>Auteur : {{ article.author }} {%  for tag  in article.tags %} <a href="{{ path('app_article_article_list', {'tag': tag.name}) }}"><h5>{{ tag.name }}</h5></a> {% endfor %} Date : {{ article.date|date('Y-m-d')  }} </h4>

        <p>{{ article.content }}</p>



        </div>

    </div>

{% endblock %}